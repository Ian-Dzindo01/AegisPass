<?xml version="1.0" encoding="utf-8"?>
<muxc:Window
    x:Class="AegisPass.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AegisPass"
    xmlns:views="using:AegisPass.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml"
    mc:Ignorable="d"
    Title="AegisPass">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Button Content="Login" Width="100" Margin="5" Click="LoginButton_Click"/>
            <Button Content="Register" Width="100" Margin="5" Click="RegisterButton_Click"/>
        </StackPanel>

        <Frame x:Name="MainFrame" Margin="0,50,0,0"/>
    </Grid>
</muxc:Window>
